<tr id="<%= "users-#{user.id}" %>">
  <td><%= user.name %></td>
  <td><%= user.role %></td>

  <% if user.current_sign_in_at.present? %>
      <td><%= user.current_sign_in_at.to_datetime.to_formatted_s(:abbr_day_and_time_format) %></td>
  <% else %>
      <td>Never</td>
  <% end %>

  <td>
    <%= link_to user_path(user) do %>
        <i class='fas fa-eye'></i>
    <% end %>
  </td>
  <td>
    <%= link_to edit_user_path(user) do %>
        <i class='fas fa-pencil-alt'></i>
    <% end %>
  </td>
</tr>
