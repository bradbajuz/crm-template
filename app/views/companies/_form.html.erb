<%= form_for company, html: { id: 'company_form', class: 'row g-3' } do |f| %>
  <%= company_error_messages! %>
  <div class="col-12">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="col-12">
    <%= f.label :brand, class: 'form-label' %>
    <small class="text-danger">
      <em>(8 characters maximum)</em>
    </small>
    <%= f.text_field :brand, class: 'form-control' %>
  </div>
  <div class="col-12">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="col-12">
    <%= f.label :welcome_page_heading, class: 'form-label' %>
    <%= f.text_field :welcome_page_heading, class: 'form-control' %>
  </div>
  <div class="col-12">
    <%= f.label :welcome_page_subheading, class: 'form-label' %>
    <%= f.text_field :welcome_page_subheading, class: 'form-control' %>
  </div>
<% end %>
